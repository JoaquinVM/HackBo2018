<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sicromoft.hackboapp.LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="Bienvenido"
        android:textAlignment="center"
        android:textAppearance="@style/Theme.AppCompat.Light"
        android:textSize="40sp"/>

    <EditText
        android:id="@+id/Usua"
        style="@style/EditTextBox"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:textColorHint="#a2a3a3"/>

    <EditText
        android:id="@+id/Contra"
        style="@style/EditTextBox"
        android:hint="password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColorHint="#a3a4a4"/>

    <Button
        android:id="@+id/logButton"
        style="@style/RoundedButton"
        android:text="Iniciar SesiÃ³n"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="No tienes cuenta?"/>

    <TextView
        android:id="@+id/joinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="UNETE AHORA"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="bold"/>

</LinearLayout>
